# DATABASE
# For Vercel/Production, use a pooled connection string (e.g., Supabase/Neon)
DATABASE_URL="postgresql://user:password@host:port/dbname?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:port/dbname"

# AUTH
JWT_SECRET="generate-a-32-char-random-string-for-production"

# SERVICES (Get these keys from respective dashboards)
RESEND_API_KEY="re_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
OPENAI_API_KEY="sk-..."

# INFRASTRUCTURE
# For Vercel, use Upstash Redis for serverless compatibility
REDIS_URL="rediss://default:password@region.upstash.io:port"

# STORAGE (S3-compatible, e.g., AWS S3 or MinIO)
S3_BUCKET="invict-academy"
S3_REGION="us-east-1"
S3_ENDPOINT="https://s3.amazonaws.com"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"

# APP
NEXT_PUBLIC_APP_URL="https://invict-academy-demo.vercel.app"
NODE_ENV="production"
DEMO_MODE="true"

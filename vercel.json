{
    "version": 2,
    "buildCommand": "cd ../.. && npm run build --workspace=web",
    "installCommand": "npm install",
    "framework": "nextjs",
    "outputDirectory": "apps/web/.next",
    "devCommand": "npm run dev --workspace=web",
    "ignoreCommand": "git diff --quiet HEAD^ HEAD apps/web/ packages/",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}
{
    "name": "invict-academy-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "db:migrate": "npm run db:migrate --workspace=@invict/db",
        "db:generate": "npm run db:generate --workspace=@invict/db",
        "db:seed": "npm run db:seed --workspace=@invict/db",
        "dev": "npm run dev --workspace=web",
        "dev:full": "concurrently \"npm run dev --workspace=api\" \"npm run dev --workspace=web\"",
        "build": "npm run build --workspaces"
    },
    "dependencies": {
        "prisma": "^5.10.2"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "typescript": "^5.3.3"
    }
}
# Environment Variables Configuration

# This file documents all environment variables required for the Invict Academy platform
# Copy this file to .env.local and fill in your actual values

# ===========================
# DATABASE
# ===========================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For Vercel Postgres: Use the POSTGRES_PRISMA_URL from Vercel dashboard
DATABASE_URL="postgresql://user:password@localhost:5432/invict_academy"

# ===========================
# AUTHENTICATION
# ===========================
# Secret key for JWT token signing (generate a strong random string)
# You can generate one with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-me"

# ===========================
# DEPLOYMENT
# ===========================
# Base URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API URL (optional, defaults to localhost:3001)
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Demo mode flag (set to 'true' for demo with mock data)
DEMO_MODE="false"

# ===========================
# PAYMENTS (Stripe)
# ===========================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ===========================
# EMAIL (Resend)
# ===========================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="noreply@yourdomain.com"

# ===========================
# AI CHATBOT (OpenAI)
# ===========================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"

# ===========================
# QUEUE & CACHE (Redis)
# ===========================
# Redis connection string
# For Upstash Redis (Vercel recommended): redis://default:password@host:port
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"

# ===========================
# FILE STORAGE (AWS S3)
# ===========================
# AWS credentials for document uploads
S3_BUCKET="your-bucket-name"
S3_REGION="us-east-1"
S3_ENDPOINT="https://s3.us-east-1.amazonaws.com"
S3_ACCESS_KEY="your-aws-access-key"
S3_SECRET_KEY="your-aws-secret-key"

# ===========================
# OPTIONAL: Build Optimization
# ===========================
# Set to 1 to skip font optimization during local builds
# NEXT_FONT_GOOGLE_MOCKED=1
